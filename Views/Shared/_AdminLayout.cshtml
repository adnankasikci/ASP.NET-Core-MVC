<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwindOut.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/components/SwiperSlider.css" asp-append-version="true" />

    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet" asp-append-version="true" />

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.min.js"
        integrity="sha512-WHVh4oxWZQOEVkGECWGFO41WavMMW5vNCi55lyuzDBID+dHg2PIxVufsguM7nfTYN3CEeQ/6NB46FWemzpoI6Q=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</head>

<script type="module">
    import { checkAndRedirect } from '/js/api/apiRequest.js';
    checkAndRedirect();
</script>

<body>

    <div id="adminView">
        @if (!Context.Request.Path.StartsWithSegments("/admin/login"))
        {
            <div class="flex flex-col h-screen md:flex-row">
                <partial name="Partials/Admin/Sidebar" />

                <main class="flex flex-col w-full order-0 md:order-1">

                    <partial name="Partials/Admin/Navbar" />

                    <div class="flex-1 overflow-y-auto bg-gray-100">

                        @RenderBody()

                        <partial name="Partials/Admin/Footer" />

                    </div>
                </main>
            </div>
        }
        else
        {
            @RenderBody()
        }
    </div>




</body>

</html>
